/* pages/index/index.wxss  background-color: aquamarine; background-color: blanchedalmond; */
.banner{
  width: 100%;
  height: 400rpx;
}
.swip_main{
  width: 100%;
  height: 100%;
}
.news{
  width: 95%;
  height: 85rpx;
  margin: 20rpx auto;
  border-radius: 80rpx;
  background-color: rgb(230, 230, 230);
  border: 1px solid rgb(0, 64, 148);
}
.news_left{
  width: 80%;
  height: 100%;

  float: left;
}
.news_left image{
  height: 70rpx;
  width: 60rpx;
  margin-top: 7.5rpx;
  margin-left: 15rpx;
  float: left;
}
.news_title{
  float: left;
  width: 80%;
  line-height: 85rpx;
  margin-left:  10rpx;
  font-weight: 700;
  font-size: 25rpx;
  color: #89898b;
}
.nav{
  width: 100%;
  height: 80rpx;
  background-color: #ffffff;
}
.nav-banner{
  height: 100%;
  width: auto;
  margin-left: 10rpx;
  margin-right: 40rpx;
  float: left;
}
.nav-banner-text{
  text-align: center;
  margin-top: 20rpx;
  font-size: 36rpx;
  font-weight: 500;
}
.goods-box{
  width: 45%;
  height:420rpx;
  margin: 2.5%;
  float: left;
  background-color: #ffffff;
}
.owner-picture{
  margin-left: 5%;
  margin-top: 10rpx;
  width: 15%;
  height: 50rpx;
  float: left;
  border-radius: 50%;
  overflow: hidden;
}
.owner-picture image{
  height: 100%;
  width: 100%;
}
.owner-name{
  margin-top: 20rpx;
  margin-left: 5rpx;
  font-size: 30rpx;
  font-weight: 500;
  float: left;
}
.auth{
  margin-left: 5%;
  margin-top: 22rpx;
  width: 10%;
  height: 30rpx;
  float: left;
}
.auth image{
  height: 100%;
  width: 100%;
}
.goods-picture{
  margin-left: 5%;
  margin-top: 10rpx;
  width: 90%;
  height: 250rpx;
}
.goods-picture image{
  height: 100%;
  width: 100%;
}
.goods-title{
  margin-top: 50rpx;
  margin-left: 5%;
  font-size: 30rpx;
  font-weight: 500;
}
.price{
  margin-top: 10rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  float: right;
  color: #f56666;
}